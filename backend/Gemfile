source 'https://rubygems.org'

ruby '~> 3.4'

# Web framework
gem 'sinatra', '~> 3.2'
gem 'sinatra-contrib', '~> 3.2'
gem 'puma', '~> 7.0'

# CORS for React frontend
gem 'rack-cors', '~> 2.0'

# HTTP client for API calls
gem 'httparty', '~> 0.21'

# JSON handling
gem 'json', '~> 2.7'

# Environment variables
gem 'dotenv', '~> 3.1'

# Database
gem 'sqlite3', '~> 2.4'

# Background jobs (optional)
gem 'sidekiq', '~> 7.3', require: false
gem 'redis', '~> 5.3', require: false

# Notifications (optional)
gem 'twilio-ruby', '~> 7.3', require: false

# Scheduling (optional)
gem 'rufus-scheduler', '~> 3.9', require: false

group :development do
  gem 'rerun', '~> 0.14'
  gem 'pry', '~> 0.14'
end

group :test do
  gem 'rack-test', '~> 2.1'
  gem 'rspec', '~> 3.13'
end
